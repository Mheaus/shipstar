<div class="wrapper">
	<div class="container">
		<h1>Find the best starship</h1>
		<h2>Cheaper, nearer, more convenient</h2>
		<%= simple_form_for(:index, url: ships_path, method: :get)  do |f| %>
		  <%= f.input_field :address, name: "country", label: false, placeholder: 'Your country'%>
		  <%= f.input_field :ships_model_id, name: "class", label: false, collection: ShipsClass.all %>
		  <%= f.submit "Search a starship", name: nil, class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
<div class="wrapper">
	<div class="container">
		<% @ships.each do |ship| %>
			<p><%= ship.user.name %></p>
			<p><%= ship.address %></p>
		<% end %>
	</div>
</div>