<div class="wrapper">
	<div class="container">
		<h1>Find the best starship</h1>
		<h2>Cheaper, nearer, more convenient</h2>
		<%= simple_form_for(@ship, method: :get)  do |f| %>
		  <%= f.input_field :address, name: "search", label: false, placeholder: 'Your city'%>
		  <%= f.submit "Search a starship", name: nil, class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
<div class="wrapper">
	<div class="container">
		<% @ships.each do |ship| %>
			<p><%= ship.user.name %></p>
			<p><%= ship.ships_info.name %></p>
			<p><%= ship.address %></p>
			<p><%= ship.ships_info.ship_class %></p>
		<% end %>
	</div>
</div>

