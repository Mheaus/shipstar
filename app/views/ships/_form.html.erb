  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <%= simple_form_for([@user, @ship]) do |f| %>
          <%= f.error_notification %>

          <%= f.input :name, label: "Ship Name", placeholder: "Starship Enterprise" %>
          <%= f.input :address, label: "Country", placeholder: "Monaco" %>
          <%= f.input :price, label: "Ships value", placeholder: "54000" %>
          <%= f.input :ships_model_id, label: "Model", collection: ShipsModel.all %>


          <%= f.button :submit, class: 'btn btn-primary' %>
        <% end %>
    </div>
  </div>
